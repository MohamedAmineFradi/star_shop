{% extends 'base.html.twig' %}

{%  block title %} Starshop: Beam up some parts! {% endblock %}

{% block body %}
<h1> Starshop: your monopoly-busting option for Starship parts! </h1>

<div>
    Browse through {{ starshipCount }} startship !
    {% if starshipCount >2 %}
<p>
    that's a shipload of  ships !
</p>

    {% endif %}

</div>

    <div>
        <h2>My Ship</h2>
        <table>
            <tr>
                <th>Name</th>
                <td>
                    <a href="{{ path('app_starship_show', {
                        id: myShip.id
                    }) }}">{{ myShip.name }}</a>
                </td>
            </tr>
            <tr>
                <th>Class</th>
                <td>{{ myShip.class }}</td>
            </tr>
            <tr>
                <th>Captin</th>
                <td>{{ myShip.captin }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ myShip.status }}</td>
            </tr>
        </table>
    </div>




{%  endblock %}
