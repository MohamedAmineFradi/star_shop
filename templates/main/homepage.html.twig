{% extends 'base.html.twig' %}

{%  block title %} Starshop: Beam up some parts! {% endblock %}

{% block body %}
<h1> Starshop: your monopoly-busting option for Starship parts! </h1>

<div>
    Browse through {{ starshipCount }} startship !
    {% if starshipCount >400 %}
<p>
    that's a shipload of  ships !
</p>

    {% endif %}

</div>

    <div>
        <h2>My Ship</h2>
        <table>
            <tr>
                <th>Name</th>
                <td>{{ myShip.name | upper | lower | capitalize }}</td>
            </tr>
            <tr>
                <th>Class</th>
                <td>{{ myShip.class }}</td>
            </tr>
            <tr>
                <th>Captain</th>
                <td>{{ myShip.captain }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ myShip.status }}</td>
            </tr>
        </table>
    </div>




{%  endblock %}
